{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": "./",
    "declaration": false,
    "sourceMap": false,
    "removeComments": true,
    "module": "CommonJS",
    "target": "ES2022",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": [
    "api/**/*.ts",
    "server/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".vercel",
    "build",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}