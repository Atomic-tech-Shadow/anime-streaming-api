# Anime-Sama API - Variables d'environnement
# Copiez ce fichier vers .env et configurez vos valeurs

# Configuration générale
NODE_ENV=production
PORT=5000

# Cache et performance
CACHE_TTL=300000
CACHE_ENABLED=true

# Limitation de débit
RATE_LIMIT_MAX=150
RATE_LIMIT_WINDOW=60000

# Configuration des requêtes
REQUEST_TIMEOUT=25000
MAX_RETRY_ATTEMPTS=3

# Sécurité et authentification
SESSION_SECRET=your_secret_key_here_minimum_32_characters
PASSIVE_AUTH_ENABLED=true
SESSION_ROTATION_INTERVAL=1800000
MAX_REQUESTS_PER_SESSION=100

# Fonctionnalités
AD_BLOCKING_ENABLED=true

# User agents (optionnel - des valeurs par défaut sont fournies)
UA_LIST="Mozilla/5.0 (Linux; Android 13; SM-G991B) AppleWebKit/537.36,Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36"